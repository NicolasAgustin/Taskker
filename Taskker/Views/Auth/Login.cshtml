@using Taskker.Models
@model LoginModel
@{
    ViewBag.Title = "Ingresar";
}

<style>
    .theme-colour {
        background-color: #d96d6d !important;
    }

    .theme-colour2 {
        background-color: #bf5e62 !important;
    }

    .input-color {
        color: white !important;
    }
</style>

<nav>
    <div class="nav-wrapper">
        <a href="@Url.Action("Index", "Home")" class="brand-logo">Taskker</a>
    </div>
</nav>

<div class="container">
    <!-- Fila -->
    <div class="row">
        @Html.ValidationSummary(false, "", new { @style="color:red;font-weight:bold"})
        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <!-- Columna -->
            <div class="col s6 offset-s3">
                <div class="card darken-1 theme-colour2">
                    <div class="card-content white-text">
                        <div class="row center-align">
                            <span class="card-title">Ingresar</span>
                        </div>
                        <!--Fila para email-->
                        <div class="row">
                            <div class="input-field col s12 offset-s3">
                                @Html.EditorFor(
                                    model => model.Email,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "input-color"
                                        }
                                    }
                                )
                                <!--<input id="email" type="email" class="validate">-->
                                <label for="email">Correo electronico</label>
                            </div>
                        </div>
                        <!--Fila para password-->
                        <div class="row">
                            <div class="input-field col s12 offset-s3">
                                @Html.EditorFor(
                                    model => model.Password,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "input-color"
                                        }
                                    }
                                )
                                <!--<input id="password" type="password" class="validate">-->
                                <label for="password">Contraseña</label>
                            </div>
                        </div>
                    </div>
                    <!--Action-->
                    <div class="card-action">
                        <div class="row">
                            <label></label>
                            <blockquote style="color:aliceblue">
                                ¿No posee una cuenta? Registrese <a href="@Url.Action("Register", "Auth")">aqui</a>
                            </blockquote>
                        </div>
                        <div class="row center-align">
                            <button class="btn waves-effect waves-light theme-colour" type="submit" name="action">
                                Ingresar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
