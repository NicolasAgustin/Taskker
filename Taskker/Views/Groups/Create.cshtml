
@{
    ViewBag.Title = "Create";
}

<nav>
    <div class="nav-wrapper">
        <a href="@Url.Action("Index", "Home")" class="brand-logo">Taskker</a>
    </div>
</nav>

<div class="container">
    <!-- Fila -->
    <div class="row">
        <!-- Columna -->
        <div class="col s6 offset-s3">
            <div class="card blue-grey darken-1">
                @Html.ValidationSummary(false, "", new { @style = "color:red;font-weight:bold" })
                @using (Html.BeginForm("Create", "Groups", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="card-content white-text">
                        <span class="card-title">Crear nuevo grupo</span>
                        <!--Fila para nombre-->
                        <div class="row">
                            <div class="input-field col s12">
                                <input placeholder="Nombre" id="grp-nombre" type="text" class="validate" name="nombre">
                                <label for="nombre">Nombre del grupo</label>
                            </div>
                        </div>
                    </div>
                    <!--Action-->
                    <div class="card-action">
                        <button class="btn waves-effect waves-light" type="submit" name="action">
                            Crear
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>